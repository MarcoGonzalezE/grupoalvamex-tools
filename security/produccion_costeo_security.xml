<?xml version="1.0" ?>
<odoo>
      <!-- categoria de accesos -->
       <record id="module_functions" model="ir.module.category">
            <field name="name">Funciones Avicampo</field>
            <field name="sequence">17</field>
        </record>
        <!-- grupos de accesos -->
        <record id="tk_group_functions" model="res.groups">
            <field name="name">Acceso Total</field>
            <field name="category_id" ref="module_functions"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user','base.group_system'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
        <!-- grupos de Usarios acceso a Planeacion -->
        <record id="planeacion_gerencia" model="res.groups">
            <field name="name">Gerencia</field>
            <field name="category_id" ref="module_functions"/>
            <field name="comment">Ver, modificar Planeacion - Crear Inventario</field>
       </record>
       <record id="planeacion_produccion" model="res.groups">
            <field name="name">Produccion</field>
            <field name="category_id" ref="module_functions"/>
            <field name="comment">Ver, modificar Planeacion - Crear Inventario</field>
       </record>
       <record id="planeacion_pt" model="res.groups">
            <field name="name">Producto Terminado</field>
            <field name="category_id" ref="module_functions"/>
            <field name="comment">Solo Usuario</field>
       </record>
       <record id="planeacion_ventas" model="res.groups">
            <field name="name">Venta</field>
            <field name="category_id" ref="module_functions"/>
            <field name="comment">Solo ver, crear y modificar Planeacion</field>
       </record>

</odoo>
