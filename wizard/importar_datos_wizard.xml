<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="sh_import_pol_wizard" model="ir.ui.view">
			<field name="name">importar.lineas.compras.wizard</field>
			<field name="model">import.pol.wizard</field>
			<field name="arch" type="xml">
				<form string="Import Purchase Order Lines">
					<group>
						<field name="import_type" widget="radio"/>
						<field name="product_by" widget="radio"/>
						<field name="file"/>
					</group>
					<footer>
						<button name="import_pol_apply" string="Importar" type="object" class="btn-primary" />
						<button string="Cancelar" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		<record id="sh_import_pol_action" model="ir.actions.act_window">
			<field name="name">Importar Lineas de Compras</field>
			<field name="res_model">import.pol.wizard</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="sh_import_pol_wizard"/>
			<field name="target">new</field>
		</record>

		<!-- MENSAJE -->
		<record id="sh_message_wizard" model="ir.ui.view">
			<field name="name">sh.message.wizard</field>
			<field name="model">sh.message.wizard</field>
			<field name="arch" type="xml">
				<form string="Message">
					<field name="name"/>
					<footer>
						<button string="OK" class="btn-primary" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>