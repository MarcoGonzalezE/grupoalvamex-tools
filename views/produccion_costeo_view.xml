<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="costeo_produccion_form_inherited" model="ir.ui.view">
            <field name="name">Costeo de Produccion</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_scrap']" position="after">
                    <button name="action_op_funtion" string="Costear" type="object" class="oe_highlight" attrs="{'invisible': ['|',('state','!=', 'done'),('costeado','=',True)]}" groups="grupoalvamex_tools.tk_group_functions"/>                    
                </xpath>                
                <!-- <xpath expr="//sheet//notebook//page[3]//group//group//field[@name='location_dest_id']" position="after"> -->
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="asig_miscelanea" readonly="1" attrs="{'invisible': [('asig_miscelanea','=', False)]}"/>
                </xpath>
                <xpath expr="//button[@name='button_scrap']" position="after">
                    <button name="asignar_misc" string="Asignar Miscelanea" type="object" class="oe_read_only" attrs="{'invisible': ['|',('state','!=', 'confirmed'),('asig_miscelanea','=',True)]}" groups="grupoalvamex_tools.tk_group_functions"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="orden_producion_costear" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="costeado" readonly="1"/>
                </xpath>
            </field>
        </record>

<!-- Modulo Fabricacion / Miscelanea-->

        <!--  Action Miscelanea-->
        <record id="miscelanea_action" model="ir.actions.act_window">
            <field name="name">Miscelanea</field>
            <field name="res_model">fabricacion.miscelanea</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p>
                    No se encontro nada.
                </p>
            </field>
        </record>

<!-- Tree Miscelanea -->
        <record id="Miscelanea_Tree" model="ir.ui.view">
            <field name="name">fabricacion.miscelanea.tree.view</field>
            <field name="model">fabricacion.miscelanea</field>
            <field name="arch" type="xml">
                <tree string="Miscelanea">
                    <field name="name"/>
                    <field name="mp"/>
                    <field name="pf"/>
                </tree>
            </field>
        </record>

<!-- form Miscelanea-->
        <record id="fabricacion_miscelanea_form" model="ir.ui.view">
            <field name="name">fabricacion.miscelanea.form.view</field>
            <field name="model">fabricacion.miscelanea</field>
            <field name="arch" type="xml">
                <form string="Miscelanea">
                    <sheet>
                        <field name="name"/>
                        <group>
                            <field name="ta"/>
                            <field name="mp"/>
                            <field name="pf"/>
                        </group>
                        <group>
                            <field name="productos"/> <!--widget="many2many_list"/>-->
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <menuitem name="Miscelanea" id="fabricacion_miscelanea" parent="mrp.menu_mrp_bom" sequence="310" action="miscelanea_action"/>


