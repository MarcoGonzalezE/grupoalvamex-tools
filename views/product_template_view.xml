<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="product_template_form_inh" model="ir.ui.view">
            <field name="name">Costos de Produccion</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Costos de Produccion">
                        <group>
                            <field name="manufacture_cost" readonly="1"/>
                            <field name="manufacture_origin" readonly="1"/>
                            <field name="last_date_cost" readonly="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>