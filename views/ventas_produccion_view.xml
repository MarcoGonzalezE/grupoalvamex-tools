                        </group>
                        <field name="nota" attrs="{'readonly':[('estado','=','recibido')]}" placeholder="Nota"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="grupoalvamex_tools.group_user"/>
