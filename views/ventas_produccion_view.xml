            <field name="model">inventario.entradas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fecha_entrada"/>
                    <field name="entrada_stock" sum="Total Entradas"/>
                    <field name="lote"/>
                    <field name="nota"/>
                </tree>
            </field>
        </record>

        <!-- REGISTRO DE FABRICACION -->
        <record id="inventario_entrada_fabricacion_view_form" model="ir.ui.view">
            <field name="name">inventario.entrada.fabricacion.form.view</field>
            <field name="model">inventario.entradas</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Recibido" type="object" class="oe_highlight" name="recibir" attrs="{'invisible':['|',('estado','=','cancelado'),('estado','=','recibido')]}" groups="grupoalvamex_tools.planeacion_pt"/><b/>
                        <field name="estado" widget="statusbar"/>                        
                    </header>
                    <sheet>                        
                        <group>
                            <group>                            
                                <field name="entrada_id" readonly="True" string="Producto" domain="[('sucursal','=',1)]"/>
                                <field name="fecha_entrada" attrs="{'readonly':[('estado','=','recibido')]}"/>
                                <field name="lote" attrs="{'readonly':[('estado','=','recibido')]}"/>
