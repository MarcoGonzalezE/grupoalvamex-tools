                    </footer>
                </form>
            </field>
        </record>
        
        <!-- BOTON EN PRODUCTO -->
        <record id="inventario_entrada_action" model="ir.actions.act_window">
            <field name="name">Entradas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">inventario.entradas</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="tree_inventario_entrada_action_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="res_model">inventario.entradas</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="inventario_entrada_tree"/>
