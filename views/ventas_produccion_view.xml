        <record id="sucursales_planeacion_view_kandan" model="ir.ui.view">
            <field name="name">Centros de DistribuciÃ³n</field>
            <field name="model">sucursales.planeacion</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <templates>
