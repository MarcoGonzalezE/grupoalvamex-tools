<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
<!-- PEDIDOS DE COMPRAS -->
		<record id="importar_lineas_compras_view_form" model="ir.ui.view">
			<field name="name">importar.lineas.compras.view.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//header" position="inside">
					<button name="importar_compras" string="Importar lineas de Pedido"  type="object" states="draft,sent" groups="grupoalvamex_tools.dep_compras" class="oe_edit_only" context="{'sh_po_id':id}" />
				</xpath>
			</field>
		</record>
<!-- PEDIDOS DE VENTAS -->
		<record id="importar_lineas_ventas_view_form" model="ir.ui.view">
		<field name="name">importar.lineas.ventas.view.form</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//header" position="inside">
				<button name="importar_ventas" string="Importar lineas de Pedido"  type="object" states="draft,sent" groups="grupoalvamex_tools.dep_ventas" class="btn-primary" context="{'sh_so_id':id}" />
			</xpath>
		</field>
	</record>
	</data>
</odoo>
  