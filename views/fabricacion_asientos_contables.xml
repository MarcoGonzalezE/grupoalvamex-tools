<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="fabricacion_asientos_contables_view_form" model="ir.ui.view">
			<field name="name">mrp.wizard.contabilidad.form.view</field>
			<field name="model">mrp.wizard.contabilidad</field>
			<field name="arch" type="xml">
				<form>
					<p><h3>Cambio de fechas de los asientos contables por la fecha de operaci√≥n.</h3></p>
					<group>
						<group>
							<field name="operacion" widget="radio" options="{'horizontal': true}"/>
							<field name="fecha_inicio"/>
						</group>
						<group>
							<field name="periodo" options="{'no_create': true}" domain="[('state','=','draft')]"/>
							<field name="fecha_final"/>
							<field name="ultimaEjecucion"/>
						</group>
					</group>
					<field name="resultado" attrs="{'invisible': [('resultado','=', False)]}"/>
					<footer>
						<button string="Ejecutar" name="action_mrp_funcion" type="object" class="btn-primary"/>
						<!-- <button name="cancel" string="Cancelar" special="cancel" class="oe_link"/> -->
					</footer>
					<div class="oe_chatter">
                      <style>
                          .o_chatter_button_new_message {
                              display: none;
                          }
                      </style>
                      <field name="message_follower_ids" widget="mail_followers"/>
                      <field name="message_ids" widget="mail_thread"/>
                  </div>					
				</form>
			</field>
		</record>

		<record id="ac_action_view" model="ir.actions.act_window">
			<field name="name">Funciones Asientos Contables</field>
			<field name="res_model">mrp.wizard.contabilidad</field>
			<field name="context">{'readonly_by_pass': True}</field>
			<field name="view_mode">tree,form</field>
			<field name="target">current</field>
		</record>

